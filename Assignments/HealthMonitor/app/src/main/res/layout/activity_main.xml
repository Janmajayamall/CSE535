<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikoo28.healthmonitor.MainActivity">

    <ImageView
        android:id="@+id/image_splash_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/splash" />

    <TextView
        android:id="@+id/textView_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:gravity="center|top"
        android:text="@string/health_monitoring"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/splash_title_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_button_margin_bottom"
        android:background="@drawable/buttonshape"
        android:text="@string/start_monitoring" />

</RelativeLayout>
